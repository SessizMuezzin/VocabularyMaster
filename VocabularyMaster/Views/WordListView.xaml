<UserControl x:Class="VocabularyMaster.WPF.Views.WordListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:enums="clr-namespace:VocabularyMaster.Core.Enums;assembly=VocabularyMaster.Core"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="950"
             Background="#fafafa">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Başlık -->
        <Border Grid.Row="0" Background="White" Padding="25,20" BorderBrush="#e0e0e0" BorderThickness="0,0,0,1">
            <Grid>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Kelime Koleksiyonum" FontSize="22" FontWeight="SemiBold" Foreground="#333"/>
                    <TextBlock Text="Tüm kelimelerinizi buradan yönetin" FontSize="13" Foreground="#999" Margin="0,4,0,0"/>
                </StackPanel>
                <Button Content="+ Yeni Kelime" 
                        Command="{Binding AddWordCommand}"
                        HorizontalAlignment="Right"
                        Background="#5cb85c"
                        Foreground="White"
                        FontSize="14"
                        Padding="20,10"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="6" 
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <!-- Filtreler -->
        <Border Grid.Row="1" Background="White" Padding="25,15" BorderBrush="#e0e0e0" BorderThickness="0,0,0,1">
            <StackPanel>
                <!-- Arama -->
                <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         FontSize="14"
                         Padding="12"
                         BorderBrush="#ddd"
                         BorderThickness="1"
                         Margin="0,0,0,12">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Style.Triggers>
                                <Trigger Property="Text" Value="">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <VisualBrush Stretch="None" AlignmentX="Left">
                                                <VisualBrush.Visual>
                                                    <TextBlock Text="🔍 Kelime ara..." 
                                                               Foreground="#aaa" 
                                                               FontSize="14"
                                                               Margin="8,0,0,0"/>
                                                </VisualBrush.Visual>
                                            </VisualBrush>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <!-- Filtre Satırı -->
                <StackPanel Orientation="Horizontal">
                    <ComboBox SelectedIndex="0"
                          FontSize="13"
                          MinWidth="150"
                          Padding="10"
                          Margin="0,0,12,0"
                          SelectionChanged="DifficultyFilter_Changed">
                        <ComboBoxItem Content="Tüm Seviyeler" Tag="{x:Null}"/>
                        <ComboBoxItem Content="A1 - Başlangıç" Tag="{x:Static enums:DifficultyLevel.A1}"/>
                        <ComboBoxItem Content="A2 - Temel" Tag="{x:Static enums:DifficultyLevel.A2}"/>
                        <ComboBoxItem Content="B1 - Orta Alt" Tag="{x:Static enums:DifficultyLevel.B1}"/>
                        <ComboBoxItem Content="B2 - Orta Üst" Tag="{x:Static enums:DifficultyLevel.B2}"/>
                        <ComboBoxItem Content="C1 - İleri" Tag="{x:Static enums:DifficultyLevel.C1}"/>
                        <ComboBoxItem Content="C2 - Üst Düzey" Tag="{x:Static enums:DifficultyLevel.C2}"/>
                    </ComboBox>

                    <CheckBox Content="⭐ Sadece Favoriler"
                              IsChecked="{Binding ShowOnlyFavorites}"
                              FontSize="13"
                              VerticalAlignment="Center"
                              Cursor="Hand"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Kelime Listesi -->
        <ScrollViewer Grid.Row="2" 
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="25,20">
            <ItemsControl ItemsSource="{Binding Words}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White" 
                                BorderBrush="#e5e5e5"
                                BorderThickness="1"
                                CornerRadius="8"
                                Margin="0,0,0,10"
                                Padding="20,16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Favori -->
                                <TextBlock Grid.Column="0" 
                                           Text="{Binding IsFavorite, Converter={StaticResource FavoriteIconConverter}}"
                                           FontSize="20"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"
                                           Cursor="Hand"
                                           Tag="{Binding}"
                                           MouseLeftButtonUp="Favorite_Click"/>

                                <!-- Kelime İçeriği -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock FontSize="17" FontWeight="SemiBold" Foreground="#333">
                                        <Run Text="{Binding English}"/>
                                        <Run Text=" • " FontSize="14" Foreground="#ccc"/>
                                        <Run Text="{Binding Turkish}" FontSize="15" FontWeight="Normal" Foreground="#666"/>
                                    </TextBlock>

                                    <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                                        <Border Background="#f0f0f0"
                                                CornerRadius="4"
                                                Padding="8,3"
                                                Margin="0,0,8,0"
                                                Visibility="{Binding Category, Converter={StaticResource NullToVisibilityConverter}}">
                                            <TextBlock Text="{Binding Category}"
                                                       FontSize="11"
                                                       Foreground="#666"/>
                                        </Border>

                                        <Border Background="#f8f8f8"
                                                CornerRadius="4"
                                                Padding="8,3"
                                                Margin="0,0,8,0">
                                            <TextBlock Text="{Binding DifficultyLevel}"
                                                       FontSize="11"
                                                       Foreground="#666"/>
                                        </Border>

                                        <TextBlock FontSize="11" Foreground="#999" VerticalAlignment="Center">
                                            <Run Text="✓"/>
                                            <Run Text="{Binding CorrectCount}"/>
                                            <Run Text=" | ✗"/>
                                            <Run Text="{Binding WrongCount}"/>
                                        </TextBlock>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Düzenle Butonu -->
                                <Button Grid.Column="2"
                                        Content="Düzenle"
                                        Tag="{Binding}"
                                        Click="Edit_Click"
                                        Background="#5bc0de"
                                        Foreground="White"
                                        FontSize="12"
                                        Padding="12,6"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        Margin="0,0,8,0">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" 
                                                                CornerRadius="5"
                                                                Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>

                                <!-- Sil Butonu -->
                                <Button Grid.Column="3"
                                        Content="Sil"
                                        Tag="{Binding}"
                                        Click="Delete_Click"
                                        Background="#d9534f"
                                        Foreground="White"
                                        FontSize="12"
                                        Padding="12,6"
                                        BorderThickness="0"
                                        Cursor="Hand">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" 
                                                                CornerRadius="5"
                                                                Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Loading -->
        <Border Grid.Row="2" 
                Background="#f0000000" 
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="⏳" FontSize="48" HorizontalAlignment="Center"/>
                <TextBlock Text="Yükleniyor..." FontSize="16" Foreground="White" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>