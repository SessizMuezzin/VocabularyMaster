<UserControl x:Class="VocabularyMaster.WPF.Views.FlashcardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000">

    <UserControl.Resources>
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#6366f1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="24,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="12"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4f46e5"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#cbd5e1"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DynamicButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="12"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#10b981"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#059669"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#ef4444"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#dc2626"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#64748b"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="16,8"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#475569"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="FilterComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#e2e8f0"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="MinWidth" Value="120"/>
        </Style>

        <Style x:Key="FilterCheckBox" TargetType="CheckBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="#f8fafc">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with Filters -->
        <Border Grid.Row="0" Background="White" Padding="30,20" 
                BorderBrush="#e2e8f0" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Title Row -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="🎴 Flashcard Çalışma" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   Foreground="#1e293b"/>
                        <TextBlock Text="Kelimeleri etkileşimli kartlarla öğren" 
                                   FontSize="13" 
                                   Foreground="#64748b" 
                                   Margin="0,4,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <Border Background="#f1f5f9" 
                                CornerRadius="8" 
                                Padding="16,8"
                                Margin="0,0,12,0">
                            <TextBlock Text="{Binding SessionStats}" 
                                       FontSize="15" 
                                       FontWeight="SemiBold"
                                       Foreground="#1e293b"/>
                        </Border>

                        <Button Content="{Binding ShuffleButtonText}" 
                                Background="{Binding ShuffleButtonColor}"
                                Command="{Binding ShuffleCommand}"
                                Style="{StaticResource DynamicButtonStyle}"
                                Margin="0,0,8,0"/>
                        <Button Content="🔄 Yeniden" 
                                Command="{Binding RestartCommand}"
                                Style="{StaticResource SecondaryButton}"/>
                    </StackPanel>
                </Grid>

                <!-- Filter Row -->
                <StackPanel Grid.Row="1" 
                            Orientation="Horizontal" 
                            Margin="0,16,0,0"
                            HorizontalAlignment="Left">

                    <TextBlock Text="🔍 Filtrele:" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               Foreground="#64748b"
                               VerticalAlignment="Center"
                               Margin="0,0,16,0"/>

                    <TextBlock Text="Seviye:" 
                               FontSize="14" 
                               Foreground="#64748b"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>

                    <ComboBox Style="{StaticResource FilterComboBox}"
                              Text="{Binding SelectedDifficultyString, Mode=TwoWay}"
                              IsEditable="False"
                              IsReadOnly="True"
                              Margin="0,0,20,0">
                        <ComboBoxItem Content="Tümü" IsSelected="True"/>
                        <ComboBoxItem Content="A1"/>
                        <ComboBoxItem Content="A2"/>
                        <ComboBoxItem Content="B1"/>
                        <ComboBoxItem Content="B2"/>
                        <ComboBoxItem Content="C1"/>
                        <ComboBoxItem Content="C2"/>
                    </ComboBox>

                    <CheckBox Content="⭐ Sadece Favoriler" 
                              IsChecked="{Binding ShowOnlyFavorites}"
                              Style="{StaticResource FilterCheckBox}"
                              Margin="0,0,20,0"/>

                    <Button Content="✓ Uygula" 
                            Command="{Binding ApplyFilterCommand}"
                            Style="{StaticResource ModernButtonStyle}"
                            Padding="20,8"/>

                    <TextBlock Text="{Binding FilteredWordsCount, StringFormat='{}{0} kelime'}" 
                               FontSize="13" 
                               Foreground="#64748b"
                               VerticalAlignment="Center"
                               Margin="16,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Card Area -->
        <Grid Grid.Row="1" Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Progress Indicator -->
            <StackPanel Grid.Row="0" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        Margin="0,0,0,24">
                <TextBlock Text="{Binding ProgressText}" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           Foreground="#64748b"/>

                <Border Background="{Binding DifficultyColor}"
                        CornerRadius="6"
                        Padding="12,4"
                        Margin="16,0,0,0"
                        Visibility="{Binding HasWords, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="{Binding DifficultyText}" 
                               FontSize="13"
                               FontWeight="Bold"
                               Foreground="White"/>
                </Border>
            </StackPanel>

            <!-- Flashcard -->
            <Border Grid.Row="1" 
                    Background="White" 
                    CornerRadius="24"
                    Padding="60"
                    Cursor="Hand"
                    MouseLeftButtonDown="Card_Click"
                    Visibility="{Binding HasWords, Converter={StaticResource BoolToVisibilityConverter}}">
                <Border.Effect>
                    <DropShadowEffect Color="#64748b" 
                                      BlurRadius="40" 
                                      ShadowDepth="0" 
                                      Opacity="0.15"/>
                </Border.Effect>

                <Grid>
                    <!-- Front Side (English) -->
                    <StackPanel VerticalAlignment="Center" 
                                HorizontalAlignment="Center"
                                Visibility="{Binding IsFlipped, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                        <TextBlock Text="EN" 
                                   FontSize="56" 
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,24"/>

                        <TextBlock Text="{Binding EnglishWord}" 
                                   FontSize="48" 
                                   FontWeight="Bold"
                                   Foreground="#1e293b"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   MaxWidth="700"/>

                        <TextBlock Text="Anlamı görmek için tıkla" 
                                   FontSize="15" 
                                   Foreground="#94a3b8"
                                   HorizontalAlignment="Center"
                                   Margin="0,32,0,0"
                                   FontStyle="Italic"/>
                    </StackPanel>

                    <!-- Back Side (Turkish) -->
                    <StackPanel VerticalAlignment="Center" 
                                HorizontalAlignment="Center"
                                Visibility="{Binding IsFlipped, Converter={StaticResource BoolToVisibilityConverter}}">
                        <TextBlock Text="🇹🇷" 
                                   FontSize="56" 
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,24"/>

                        <TextBlock Text="{Binding TurkishMeanings}" 
                                   FontSize="36" 
                                   FontWeight="SemiBold"
                                   Foreground="#1e293b"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   MaxWidth="700"
                                   LineHeight="52"/>

                        <Border Background="#f1f5f9"
                                CornerRadius="12"
                                Padding="24,16"
                                Margin="0,32,0,0"
                                MaxWidth="700"
                                Visibility="{Binding ExampleSentence, Converter={StaticResource NullToVisibilityConverter}}">
                            <TextBlock Text="{Binding ExampleSentence}" 
                                       FontSize="15" 
                                       Foreground="#64748b"
                                       TextAlignment="Center"
                                       TextWrapping="Wrap"
                                       FontStyle="Italic"/>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Empty State -->
            <StackPanel Grid.Row="1" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Center"
                        Visibility="{Binding HasWords, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                <TextBlock Text="📭" 
                           FontSize="80" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,24"/>
                <TextBlock Text="Filtre kriterlerine uygun kelime bulunamadı" 
                           FontSize="20" 
                           Foreground="#64748b"
                           FontWeight="SemiBold"
                           TextAlignment="Center"/>
                <TextBlock Text="Filtreleri değiştirin veya yeni kelimeler ekleyin" 
                           FontSize="15" 
                           Foreground="#94a3b8"
                           TextAlignment="Center"
                           Margin="0,12,0,0"/>
            </StackPanel>
        </Grid>

        <!-- Footer Controls -->
        <Border Grid.Row="2" 
                Background="White" 
                Padding="40,24" 
                BorderBrush="#e2e8f0" 
                BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Previous Button -->
                <Button Grid.Column="0" 
                        Content="⬅️ Önceki" 
                        Command="{Binding PreviousCardCommand}"
                        Style="{StaticResource ModernButtonStyle}"
                        HorizontalAlignment="Left"
                        MinWidth="140"/>

                <!-- Center Buttons -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center">

                    <!-- Answer Buttons (visible when flipped) -->
                    <StackPanel Orientation="Horizontal"
                                Visibility="{Binding IsFlipped, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Button Content="❌ Bilmedim" 
                                Command="{Binding MarkWrongCommand}"
                                Style="{StaticResource DangerButton}"
                                MinWidth="160"
                                Margin="0,0,16,0"/>
                        <Button Content="✅ Bildim" 
                                Command="{Binding MarkCorrectCommand}"
                                Style="{StaticResource SuccessButton}"
                                MinWidth="160"/>
                    </StackPanel>

                    <!-- Flip Button (visible when not flipped) -->
                    <Button Content="🔄 Kartı Çevir" 
                            Command="{Binding FlipCardCommand}"
                            Style="{StaticResource ModernButtonStyle}"
                            MinWidth="160"
                            Visibility="{Binding IsFlipped, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                </StackPanel>

                <!-- Next Button -->
                <Button Grid.Column="2" 
                        Content="Sonraki ➡️" 
                        Command="{Binding NextCardCommand}"
                        Style="{StaticResource ModernButtonStyle}"
                        HorizontalAlignment="Right"
                        MinWidth="140"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>