<Window x:Class="VocabularyMaster.WPF.Views.AddEditWordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kelime Ekle/Düzenle" Height="600" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- İngilizce Kelime -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="İngilizce Kelime:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="EnglishTextBox" Padding="8" FontSize="14"/>
        </StackPanel>

        <!-- Anlamlar Başlık -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Türkçe Anlamlar:" FontWeight="Bold" FontSize="14"/>
            <Button Grid.Column="1" Content="➕ Yeni Anlam" Click="AddMeaning_Click"
                    Background="#4CAF50" Foreground="White" Padding="10,5"
                    BorderThickness="0" Cursor="Hand" FontSize="12" FontWeight="Bold"/>
        </Grid>

        <!-- Anlamlar Listesi -->
        <Border Grid.Row="2" BorderBrush="#ddd" BorderThickness="1" CornerRadius="5" 
                MaxHeight="250" Margin="0,0,0,15">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="MeaningsItemsControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#f9f9f9" Margin="5" Padding="10" CornerRadius="5">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Türkçe Anlam -->
                                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,5">
                                        <TextBlock Text="Türkçe:" FontSize="11" Foreground="#666" Margin="0,0,0,3"/>
                                        <TextBox Text="{Binding Turkish, UpdateSourceTrigger=PropertyChanged}" 
                                                 Padding="6" FontSize="13"/>
                                    </StackPanel>

                                    <!-- Sil Butonu -->
                                    <Button Grid.Row="0" Grid.Column="1" Content="🗑️" 
                                            Tag="{Binding}"
                                            Click="RemoveMeaning_Click"
                                            Background="#f44336" Foreground="White" 
                                            Width="30" Height="30" FontSize="14"
                                            BorderThickness="0" Cursor="Hand"
                                            VerticalAlignment="Top"/>

                                    <!-- Örnek Cümle -->
                                    <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
                                        <TextBlock Text="Örnek Cümle (Opsiyonel):" FontSize="11" Foreground="#666" Margin="0,0,0,3"/>
                                        <TextBox Text="{Binding ExampleSentence, UpdateSourceTrigger=PropertyChanged}" 
                                                 Padding="6" FontSize="13" TextWrapping="Wrap" Height="50"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Kategori ve Seviye -->
        <Grid Grid.Row="3" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="Kategori (Opsiyonel):" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="CategoryTextBox" Padding="8" FontSize="14"/>
            </StackPanel>

            <StackPanel Grid.Column="2">
                <TextBlock Text="Zorluk Seviyesi:" FontWeight="Bold" Margin="0,0,0,5"/>
                <ComboBox x:Name="DifficultyComboBox" Padding="8" FontSize="14">
                    <ComboBoxItem Content="A1 - Başlangıç"/>
                    <ComboBoxItem Content="A2 - Temel"/>
                    <ComboBoxItem Content="B1 - Orta"/>
                    <ComboBoxItem Content="B2 - Orta Üstü"/>
                    <ComboBoxItem Content="C1 - İleri"/>
                    <ComboBoxItem Content="C2 - Çok İleri"/>
                </ComboBox>
            </StackPanel>
        </Grid>

        <!-- Butonlar -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="💾 Kaydet" Click="SaveButton_Click" 
                    Width="120" Height="40" Margin="0,0,10,0"
                    Background="#4CAF50" Foreground="White" FontWeight="Bold" FontSize="14"
                    BorderThickness="0" Cursor="Hand"/>
            <Button Content="❌ İptal" Click="CancelButton_Click" 
                    Width="120" Height="40"
                    Background="#f44336" Foreground="White" FontWeight="Bold" FontSize="14"
                    BorderThickness="0" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>