<Window x:Class="VocabularyMaster.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:VocabularyMaster.WPF.Views"
        xmlns:viewModels="clr-namespace:VocabularyMaster.WPF.ViewModels"
        Title="Vocabulary Master - İngilizce Kelime Öğrenme" 
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <DataTemplate DataType="{x:Type viewModels:DashboardViewModel}">
            <views:DashboardView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:WordListViewModel}">
            <views:WordListView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:TestViewModel}">
            <views:TestView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:FlashcardViewModel}">
            <views:FlashcardView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:StatisticsViewModel}">
            <views:StatisticsView/>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#2c3e50" BorderThickness="0,0,1,0" BorderBrush="#34495e">
            <StackPanel Margin="0,20,0,0">
                <StackPanel Margin="20,0,20,40">
                    <TextBlock Text="📚 Vocabulary" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                    <TextBlock Text="Master" FontSize="24" FontWeight="Bold" Foreground="#3498db" HorizontalAlignment="Center"/>
                </StackPanel>

                <Button Command="{Binding NavigateToDashboardCommand}" 
                        Style="{StaticResource NavButtonStyle}"
                        Tag="Dashboard"
                        Click="NavButton_Click"
                        x:Name="DashboardButton"
                        Content="📊 Dashboard"/>

                <Button Command="{Binding NavigateToWordsCommand}"
                        Style="{StaticResource NavButtonStyle}"
                        Tag="Words"
                        Click="NavButton_Click"
                        x:Name="WordsButton"
                        Content="📝 Kelimeler"/>

                <Button Command="{Binding NavigateToTestCommand}"
                        Style="{StaticResource NavButtonStyle}"
                        Tag="Test"
                        Click="NavButton_Click"
                        x:Name="TestButton"
                        Content="🎯 Test"/>
                
                <Button Command="{Binding NavigateToFlashcardCommand}"
                        Style="{StaticResource NavButtonStyle}"
                        Tag="Flashcard"
                        Click="NavButton_Click"
                        x:Name="FlashcardButton"
                        Content="🎴 Flashcard"/>

                <Button Command="{Binding NavigateToStatisticsCommand}"
                        Style="{StaticResource NavButtonStyle}"
                        Tag="Statistics"
                        Click="NavButton_Click"
                        x:Name="StatisticsButton"
                        Content="📈 İstatistikler"/>
            </StackPanel>
        </Border>

        <ContentControl Grid.Column="1" Content="{Binding CurrentViewModel}"/>
    </Grid>
</Window>